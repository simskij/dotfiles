{
  "window.zoomLevel": 1,
  "extensions.autoUpdate": true,
  // Editor
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.tokenColorCustomizations": {},
  "editor.rulers": [100],
  // Telemetry
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  // Workbench
  "workbench.iconTheme": "material-icon-theme",

  "materialTheme.accent": "Cyan",

  // GPM
  "gitProjectManager.baseProjectsFolders": ["~/code"],
  // Formatters
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.defaultFormatter": "ms-vscode.Go"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Files
  "files.associations": {
    "Brewfile": "ruby"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.idea": true
  },
  // Integrated Terminal
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "FiraMono Nerd Font",
  // Go
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true
  },
  // Zen Mode
  "zenMode.fullScreen": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.silentNotifications": true,
  "zenMode.hideActivityBar": false,
  "zenMode.centerLayout": true,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": false,
  "material-icon-theme.folders.color": "#90a4ae",
  "editor.tabSize": 2,
  "prettier.singleQuote": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Only for streaming
  // "editor.cursorBlinking": "solid",
  // "editor.quickSuggestions": false,
  // "editor.parameterHints": false,
  // "window.titleBarStyle": "native",
  // "explorer.confirmDelete": false

  "kickassembler.assemblerJar": "/Users/simme/KickAssembler/KickAss.jar",
  "kickassembler.javaRuntime": "/usr/bin/java",
  "kickassembler.emulatorRuntime": "/Applications/vice-gtk3-3.4-r37694/bin/x64sc",
  "workbench.colorTheme": "Nord"
}
